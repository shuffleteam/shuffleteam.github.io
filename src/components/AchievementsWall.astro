---
// src/components/AchievementsWall.astro
import { Icon } from "astro-icon/components";

// --- Props Definition ---
// 我们定义一些可以从外部传入的属性，比如标题和要展示的成就数据
interface Achievement {
  icon: string;
  value: string;
  label: string;
  description: string;
}

interface Props {
  title: string;
  achievements: Achievement[];
}

const { title, achievements } = Astro.props;
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    
    <!-- Section Title -->
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-12">
      {title}
    </h2>
    
    <!-- Achievements Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        achievements.map((item) => (
          <div class="relative overflow-hidden rounded-lg bg-white p-8 border border-gray-200 shadow-sm hover:shadow-lg transition-shadow duration-300">
            {/* Subtle background pattern */}
            <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] opacity-20"></div>
            
            <div class="relative z-10">
              {/* Icon */}
              <div class="mb-6 flex items-center justify-center w-16 h-16 rounded-full bg-indigo-100">
                <Icon name={item.icon} class="w-8 h-8 text-indigo-600" />
              </div>

              {/* Value (The Big Number) */}
              <div class="text-5xl font-bold text-indigo-600 mb-2">
                {item.value}
              </div>

              {/* Label */}
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {item.label}
              </h3>

              {/* Description */}
              <p class="text-gray-500 leading-relaxed">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>

  </div>
</section>